@{
    Layout = "~/Views/Shared/_AdminpanelLayout.cshtml";
}

<h1>Product</h1>

<div class="col-6 text-end">
    <a class="btn btn-primary" asp-area="" asp-controller="Product" asp-action="Create">
        <i class="bi bi-plus-circle"></i>
        Create Product
    </a>
</div>
<br />

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="row">
                Name
            </th>
            <th scope="row">
                Heading
            </th>
            <th scope="row">
                Description
            </th>
            <th scope="row">
                Url
            </th>
            <th scope="row">
                Display Order
            </th>

            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Product in Model)
        {
            <tr>
                <td>@Product.Name</td>
                <td>@Product.Heading</td>
                <td>@Product.Description</td>
                <td>
                    <img width=200 height=200 src=@Product.ImageUrl aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"/>
                </td>
                <td>@Product.DisplayOrder</td>
                <td>
                    <a class="btn btn-primary mb-2" asp-action="Edit" asp-controller="Product" asp-route-id="@Product.Id">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a class="btn btn-primary mb-2" asp-action="Delete" asp-controller="Product" asp-route-id="@Product.Id">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>


