<section class="h-100" >
  <div class="container h-100 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-10">

        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3 class="fw-normal mb-0 text-black">Shopping Cart</h3>
        </div>

         @foreach (var item in ViewBag.CartItems)
         {
        <div class="card rounded-3 mb-4">
          <div class="card-body p-4">
            <div class="row d-flex justify-content-between align-items-center">
              <div class="col-md-2 col-lg-2 col-xl-2">
                <img
                  src="@item.Product.ImageUrl"
                  class="img-fluid rounded-3">
              </div>
              <div class="col-md-3 col-lg-3 col-xl-3">
                <p class="lead fw-normal mb-2">@item.Product.Heading</p>
                <p>@item.Product.Description</p>
              </div>
              <div class="col-md-3 col-lg-3 col-xl-2 d-flex">              

                <input id="form1" min="0" name="quantity" value=@item.Quantity type="number"
                  class="form-control form-control-sm" disabled />

                
              </div>
              <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                   <h5 class="mb-0">$@item.Product.Price</h5>
              </div>
              <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                   <a class="btn btn-danger" asp-area="" asp-controller="Shop" asp-action="RemoveFromCart"  asp-route-id = "@item.Product.Id">Remove From Cart </a>
              </div>
            </div>
          </div>
        </div>
         }



        <div class="card">
          <div class="card-body">
              <a asp-controller="Shop" asp-action="Purchase" class="btn btn-warning btn-block btn-lg">
                <h6>Proceed To Pay</h6>
              </a>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>